<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bigButton" parent="buttonBase@styles">
        <item name="i3d:font">bigButton@fonts</item>
        <item name="i3d:layout_width">wrap_content</item>
        <item name="i3d:layout_height">wrap_content</item>
        <item name="i3d:layout_paddingLeft">30px</item>
        <item name="i3d:layout_paddingRight">30px</item>
        <item name="i3d:layout_paddingTop">10px</item>
        <item name="i3d:layout_paddingBottom">10px</item>
    </style>

    <style name="buttonBase">
        <item name="i3d:gravity">center</item>
        <item name="i3d:borderSize">1px</item>
        <item name="i3d:borderColor">borderButtonBase@color</item>
        <item name="i3d:cornerLeftTopStyle">bevel</item>
        <item name="i3d:cornerLeftTopSize">10px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">10px</item>
        <item name="i3d:background">buttonBaseBackground@backgrounds</item>
    </style>
    
    <style name="lightBlock">
        <item name="i3d:cornerLeftTopStyle">bevel</item>
        <item name="i3d:cornerLeftTopSize">10px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">10px</item>
        <item name="i3d:layout_paddingLeft">25px</item>
        <item name="i3d:layout_paddingRight">25px</item>
        <item name="i3d:layout_paddingTop">15px</item>
        <item name="i3d:layout_paddingBottom">15px</item>
        <item name="i3d:background">lightBlock@backgrounds</item>
    </style>

</resources>