<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    i3d:id="main"
    i3d:style="lightBlock@styles"
    i3d:layout_width="match_parent"
    i3d:layout_height="wrap_content"
    i3d:orientation="vertical"
    i3d:layout_marginLeft="10px"
    i3d:layout_marginRight="10px"
    i3d:layout_marginTop="5px"
    i3d:layout_marginBottom="5px" >

    <TextView
        i3d:id="productNameTextView"
        i3d:layout_paddingBottom="5px"
        i3d:font="medium@fonts"
        i3d:color="defaultFont@color" />
    
    <Button
        i3d:id="cancelProductButton"
        i3d:style="smallButton@styles"
        i3d:layout_marginBottom="5px"
        i3d:layout_paddingLeft="20px"
        i3d:layout_paddingRight="20px"
        i3d:text="cancelProductionTask@strings"
        i3d:color="defaultFont@color" />
    
</LinearLayout>